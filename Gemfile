gem 'coffee-rails', '~> 5.0.0'
gem 'jbuilder', '~> 2.10'
gem 'jquery-rails'
gem 'rails', '~> 5.2'
gem 'sass-rails', '~> 6.0'
gem 'sdoc', '~> 1.1', group: :doc
gem 'turbolinks'
gem 'uglifier', '~> 4.2.0'
